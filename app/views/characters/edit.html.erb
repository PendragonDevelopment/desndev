<% content_for :head do %>
	<%= render 'shared/pageheader' %>
<% end %>

<div class="character-creation">
  <%= simple_form_for([@user, @character]) do |f| %>
    <%= f.error_notification %>

    <div class="class-details">
      <%= f.hidden_field :user_id, :value => @user.id %>
      <%= f.input :user_class, :collection => user_class_types, :wrapper_html => { :class => 'eight columns' } %>
      <%= f.input :proficiency, :collection => skill_proficiencies, :wrapper_html => { :class => 'eight columns' } %>
    </div>

    <div class="inputs">
      <%= f.input :aesthetics, :collection => 1..10, :wrapper_html => { :class => 'four columns' } %>
      <%= f.input :analysis, :collection => 1..10, :wrapper_html => { :class => 'four columns' } %>
      <%= f.input :charisma, :collection => 1..10, :wrapper_html => { :class => 'four columns' } %>
      <%= f.input :curiosity, :collection => 1..10, :wrapper_html => { :class => 'four columns' } %>
      <%= f.input :empathy, :collection => 1..10, :wrapper_html => { :class => 'four columns' } %>
      <%= f.input :intuition, :collection => 1..10, :wrapper_html => { :class => 'four columns' } %>
      <%= f.input :willpower, :collection => 1..10, :wrapper_html => { :class => 'four columns' } %>
    </div>

    <div class="actions">
      <%= f.button :submit, "Set attributes" %>
    </div>
  <% end %>  
</div>