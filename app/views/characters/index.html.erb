<% content_for :head do %>
	<%= render 'shared/pageheader' %>
<% end %>
<p><%= @user.name %></p>
<% if @user.character.nil? %>
	<p>Create your character: <%= link_to 'New Character', new_user_character_path %></p>
<% else %>
	<p>Modify your character: <%= link_to 'Edit Character', edit_user_character_path(@user, @character) %></p>
	<h1><%=link_to image_tag(avatar_url(@user)), @user %><%= @user.name %></h1>
	<p>This is your character's stats:</p>
	<h3>Class: <%= @character.user_class %></h3>
	<h3>Proficiency: <%= @character.proficiency %></h3>
	<h3>Attributes:</h3>
	<p>Aesthetics: <%= @character.aesthetics %></p>
	<p>Analysis: <%= @character.analysis %></p>
	<p>Charisma: <%= @character.charisma %></p>
	<p>Curiosity: <%= @character.curiosity %></p>
	<p>Empathy: <%= @character.empathy %></p>
	<p>Intuition: <%= @character.intuition %></p>
	<p>Willpower: <%= @character.willpower %></p>
<% end %>
